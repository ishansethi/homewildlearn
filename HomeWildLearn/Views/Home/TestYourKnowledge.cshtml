@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>


<link href="~/css/quiz.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">


<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('../Content/images/quizimage.jpg')">
        <div class="container">
            <div class="row align-items-center ">
                <div class="col-md-5 mt-5 pt-5">
                    <span class="text-cursive h2 text-red">Welcome To Wild-HomeLearn</span>
                    <p><a href="#" class="text-yellow">It's time to check knowledge </a></p>
                    <p><a href="#" class="text-white">Home</a> <span class="mx-0">/</span> <strong>Check Your Knowledge</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section py-5 bg-warning">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex">
                <h2 class="text-white m-0">Hey Kids  <small>- hope this quiz is not that easy for you ...</small></h2>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form id="quiz" name="quiz">
                <p class="questions">What is the little Kangaroo called?</p>
                <input id="textbox" type="text" name="question1">
                <p class="questions">Are Quokkas always smiling?</p>
                <input type="radio" id="mc" name="question2" value="Hartford"> True<br>
                <input type="radio" id="mc" name="question2" value="Heartford"> False<br>
                <p class="questions">Tasmanian devils are only found in Tasmania?</p>
                <input type="radio" id="mc" name="question3" value="Albany"> True<br>
                <input type="radio" id="mc" name="question3" value="All Benny's"> False<br>
                <input id="button" type="button" value="I'm finished!" onclick="check();">
            </form>
            <div id="after_submit">
                <p id="number_correct"></p>
                <p id="message"></p>
                <img id="picture">
            </div>
        </div>
    </div>
</div>


<div class="site-section py-5 bg-warning">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex">
                <h2 class="text-white m-0">We hope you enjoyed the game..<small>if you want to learn more - Click the learn more.</small></h2>
                <p><a href="@Url.Action("Index", "Animals1" )" class="btn btn-primary btn-custom-1 mt-4">Learn More</a></p>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/quizTemplate1.js"></script>
<script src="~/Scripts/quizTemplate2.js"></script>